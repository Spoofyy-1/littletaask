{
  "version": 2,
  "name": "littletask",
  "buildCommand": "echo 'No build needed for static site'",
  "outputDirectory": "website",
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    }
  ]
} 